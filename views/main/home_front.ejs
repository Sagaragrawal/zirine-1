<%- layout('layout_front') -%>

 <div class="vertical-center">
		<div class="container">

		<div class="row" >

			<div class="yoyo col-lg-12 col-md-12 col-sm-12 col-xs-12 wow fadeInRight" align="center">
					<h1>Zirine</h1>
			</div>
			<div class="yoyo col-lg-12 col-md-12 col-sm-12 col-xs-12 wow fadeInLeft" align="center">
					<p>Where Ideas are generated.</p>
			</div>
		</div>

		<div class="row">
				<% if(message.length > 0) { %>

			  <div class="alert alert-danger alert-dismissible" role="alert">
			      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			     

			     <%= message %>

		      
		  	 </div>

		        	<% } %>


				<div class = "col-md-4 col-md-offset-4 well wow rotateInUpRight" data-wow-delay="0.8s">


					<h1 class="text-center" >Sign Up</h1>
					<form id = "main" method="post" action="/users">

					<div class= "form-group">
						<label>Username</label>

						<div class="input-group">
							<span class="input-group-addon">
								<i class="glyphicon glyphicon-user"></i>
							</span>
							<input type="text" name="username" class= "form-control" placeholder="John"/>
						</div>
						
					</div>
					
					<div class="form-group">
						<label>Email</label>
						<div class="input-group">
							<span class="input-group-addon">
								<i class="glyphicon glyphicon-briefcase"></i>
							</span>

							<input type="email" name="email"  class="form-control" placeholder="xyz@gmail.com"/><br>
						</div>

					</div>

					<div class="form-group">
						<label>Password</label>
						<div class="input-group">
							<span class="input-group-addon">
								<i class="glyphicon glyphicon-circle-arrow-right"></i>
							</span>

							<input type="password" name="password"  class="form-control" placeholder="*********"/><br>
						</div>

					</div>

					<div class="form-group">
						<label>Confirm Password</label>
						<div class="input-group">
							<span class="input-group-addon">
								<i class="glyphicon glyphicon-circle-arrow-right"></i>
							</span>

							<input type="password" name="confirmpassword"  class="form-control" placeholder="*********"/><br>
						</div>

					</div>

						<div class="form-group">
							<input type="Submit" value="Register!" class="btn btn-success btn-block" />
						</div>
					</form>

				</div>
			</div>
		
		</div>
	</div>
